.articleSection
  background-color #F8F8F8
  border solid 1px #DCDCDC
  cursor: pointer
  &:hover
    background-color #FFFFFF

.articleDetails
  text-align center

.articleForm
  position relative
  display block
  left 50%
  transform: translate(-25%, 0%)

.buttonMargin
  margin 0 10px 0 10px

.spanImageClickDelete
  color: black
  position absolute
  top -95px
  left 82px
  &:hover
    color red

.selectedImage
  outline: 4px solid red;
  outline-offset: -4px;

.imagePreview
  &:hover
    opacity 0.7

//big picture
#bigPicture
  z-index: 1001
  display: block
  max-height: 90vh
  max-width: 90vw
  margin-left: 50vw
  margin-top: 50vh
  transform: translate(-50%, -50%)
  position: fixed

.closingXSign
  top: -2%
  position: absolute
  right: 2%
  font-size: 4em
  cursor: pointer
  z-index: 1002
  color: white
  font-weight: bol

.arrow
  z-index: 1002
  color: white
  font-weight: bold
  top: 50%
  position: absolute
  font-size: 4em
  cursor: pointer

.nextArrow
  right: 2%

.previousArrow
  left: 2%

.imageNumber
  top: 96%
  left: 50%
  transform: translate(-50%, 0%)
  position: absolute
  color: white
  font-size: 20px
  z-index: 1002
  font-weight: bold

.imageInputButton
  color transparent
  text-align center
  width 104px
  margin-left 0

#imageInputButton
  display inline-block