body html
  padding 0
  margin 0
  height 100%

.unselectable
  -webkit-touch-callout none
  -webkit-user-select none
  -khtml-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none

.postSection, .commentSection, .generalPadding
  padding 10px 20px 10px 20px

.heading
  margin-top 15px
  text-align center

.formWindow
  border #000 solid 1px
  z-index 1000
  position fixed
  top 30%
  left 30%
  margin 0 auto
  height 40%
  width 40%
  background-color #d6d6d6
  opacity 1
  text-align center

.formComponent
  position fixed
  z-index 1000

.spanInfo
  margin 10px 20px 10px 20px

.navbar
  margin-bottom 0
  height 5vh

.imagePreview
  height 100px
  width 100px

textarea
  resize none

.updateFormTextarea
  transform translate(-35%, -5%)
  left 50%

a:hover {
  cursor: pointer;
}

#imageOverlayParent
  height: 100vh
  width: 100vw
  position: fixed
  top: 0
  left: 0
  margin: 0
  padding: 0
  z-index: 999

#imageOverlay
  z-index: 1000
  position: fixed
  top: 0
  left: 0
  height: 100vh
  width: 100vw
  background-color: black
  opacity: 0.95

.overlay
  z-index: 1000
  position: fixed
  top: 0
  left: 0
  height: 100vh
  width: 100vw
  background-color: white
  opacity: 0.75
  overflow hidden

.spanClick
  cursor: pointer
